{% extends 'base.html.twig' %}
            {% block container %}




<div class="content">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Data Table</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Image</th>
                                            <th>Libelle</th>
                                            <th>Date Début</th>
                                            <th>Date Fin</th>
                                            <th>Description</th>
                                            <th>Modifier</th>
                                            <th>Supprimer</th>
                                            <th>Afficher détails</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       {% for eve in evenements %}
    <tr>
        <td>{{eve.id}}</td>
    <td><img src="{{ asset('images/') }}{{ eve.nomImage }}" style="width: 100px;height: 100px"></td>

        <td>{{eve.libelle}}</td>
        <td>{{eve.datedebut|date}}</td>
        <td>{{eve.datefin|date}}</td>
        <td>{{eve.description}}</td>
         <td><button type="button" class="btn btn-labeled btn-infot"><span class="btn-label"><i class="glyphicon glyphicon-refresh"></i></span><a href="{{path('evenement_modifier',{'id':eve.id})}}">modifier</a></button> </td>
         <td><button type="button" class="btn btn-labeled btn-danger"> <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span><a href="{{path('evenement_supprimer',{'id':eve.id})}}">supprimer</a> </button></td>
        <td ><button type="button" class="btn btn-success btn-labeled"><span class="btn-label"><i class="glyphicon glyphicon-info-sign"></i></span><a href="{{path('detailsEve',{'id':eve.id})}}">affiche détails</a></button> </td>



    </tr>


{% endfor %}
           <br><li>   <a href="{{ path('export') }}">Export</a></li>
      
                                       
                                      
                                       
                                        
                                        
                                       
                                        
                                        
                                       
                                    
                                       
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div>
{% endblock %}